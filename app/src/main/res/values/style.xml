<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="row">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="header">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="header.yellow">
        <item name="android:textColor">#E5F25C</item>
    </style>
    <style name="header.green">
        <item name="android:textColor">#3EDD4B</item>
    </style>

    <style name="txt_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <style name="btn">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="label.big">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#37E2FC</item>
    </style>
</resources>